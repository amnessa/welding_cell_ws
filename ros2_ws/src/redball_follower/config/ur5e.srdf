<?xml version="1.0" encoding="UTF-8"?>
<!--
  UR5e Semantic Robot Description Format (SRDF)
  Auto-generated for redball_follower project.

  This defines the planning groups, end-effectors, and collision
  matrix for MoveIt motion planning with the UR5e robot.
-->
<robot name="ur5e">

  <!-- ============================================ -->
  <!--  Planning Group: ur_manipulator              -->
  <!--  Kinematic chain from base to tool0          -->
  <!-- ============================================ -->
  <group name="ur_manipulator">
    <chain base_link="base_link" tip_link="tool0"/>
  </group>

  <!-- ============================================ -->
  <!--  End Effector                                -->
  <!-- ============================================ -->
  <end_effector name="camera_ee" parent_link="tool0" group="ur_manipulator"/>

  <!-- ============================================ -->
  <!--  Virtual Joint: world to base                -->
  <!-- ============================================ -->
  <virtual_joint name="virtual_joint" type="fixed" parent_frame="world" child_link="base_link"/>

  <!-- ============================================ -->
  <!--  Named Poses                                 -->
  <!-- ============================================ -->
  <group_state name="home" group="ur_manipulator">
    <joint name="shoulder_pan_joint"  value="0.0"/>
    <joint name="shoulder_lift_joint" value="-1.5708"/>
    <joint name="elbow_joint"         value="0.0"/>
    <joint name="wrist_1_joint"       value="-1.5708"/>
    <joint name="wrist_2_joint"       value="0.0"/>
    <joint name="wrist_3_joint"       value="0.0"/>
  </group_state>

  <group_state name="up" group="ur_manipulator">
    <joint name="shoulder_pan_joint"  value="0.0"/>
    <joint name="shoulder_lift_joint" value="-1.5708"/>
    <joint name="elbow_joint"         value="-1.5708"/>
    <joint name="wrist_1_joint"       value="-1.5708"/>
    <joint name="wrist_2_joint"       value="1.5708"/>
    <joint name="wrist_3_joint"       value="0.0"/>
  </group_state>

  <!-- ============================================ -->
  <!--  Disable Collisions (adjacent + never)       -->
  <!--  These link pairs can never collide or are   -->
  <!--  always in collision (adjacent links).       -->
  <!-- ============================================ -->

  <!-- Adjacent link pairs (connected by joints) -->
  <disable_collisions link1="base_link"       link2="base_link_inertia" reason="Adjacent"/>
  <disable_collisions link1="base_link_inertia" link2="shoulder_link"   reason="Adjacent"/>
  <disable_collisions link1="shoulder_link"   link2="upper_arm_link"    reason="Adjacent"/>
  <disable_collisions link1="upper_arm_link"  link2="forearm_link"      reason="Adjacent"/>
  <disable_collisions link1="forearm_link"    link2="wrist_1_link"      reason="Adjacent"/>
  <disable_collisions link1="wrist_1_link"    link2="wrist_2_link"      reason="Adjacent"/>
  <disable_collisions link1="wrist_2_link"    link2="wrist_3_link"      reason="Adjacent"/>

  <!-- Fixed child links on wrist_3 -->
  <disable_collisions link1="wrist_3_link"    link2="ft_frame"          reason="Adjacent"/>
  <disable_collisions link1="wrist_3_link"    link2="flange"            reason="Adjacent"/>
  <disable_collisions link1="wrist_3_link"    link2="tool0"             reason="Adjacent"/>
  <disable_collisions link1="wrist_3_link"    link2="camera_link"       reason="Adjacent"/>
  <disable_collisions link1="flange"          link2="tool0"             reason="Adjacent"/>
  <disable_collisions link1="camera_link"     link2="camera_optical_frame" reason="Adjacent"/>

  <!-- Base frame aliases -->
  <disable_collisions link1="base_link"       link2="base"              reason="Adjacent"/>
  <disable_collisions link1="base_link_inertia" link2="base"            reason="Adjacent"/>

  <!-- Never-in-collision pairs (far apart in chain) -->
  <disable_collisions link1="base_link"       link2="shoulder_link"     reason="Never"/>
  <disable_collisions link1="base_link_inertia" link2="upper_arm_link"  reason="Never"/>
  <disable_collisions link1="shoulder_link"   link2="forearm_link"      reason="Never"/>
  <disable_collisions link1="upper_arm_link"  link2="wrist_1_link"      reason="Never"/>
  <disable_collisions link1="forearm_link"    link2="wrist_2_link"      reason="Never"/>
  <disable_collisions link1="wrist_1_link"    link2="wrist_3_link"      reason="Never"/>

  <!-- Camera links never collide with base/arm -->
  <disable_collisions link1="camera_link"     link2="flange"            reason="Never"/>
  <disable_collisions link1="camera_link"     link2="ft_frame"          reason="Never"/>
  <disable_collisions link1="camera_link"     link2="tool0"             reason="Never"/>
  <disable_collisions link1="camera_optical_frame" link2="wrist_3_link" reason="Never"/>
  <disable_collisions link1="camera_optical_frame" link2="flange"       reason="Never"/>
  <disable_collisions link1="camera_optical_frame" link2="tool0"        reason="Never"/>
  <disable_collisions link1="camera_optical_frame" link2="ft_frame"     reason="Never"/>

</robot>
